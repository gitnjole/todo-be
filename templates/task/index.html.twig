{% extends 'base.html.twig' %}

{% block page_styles %}
    <link rel="stylesheet" href="{{ asset('css/tasks.css') }}">
{% endblock %}

{% block body %}
    <div class="tasks-container">
        <h1>My Tasks</h1>

        <div class="tasks-grid">
            {% for task in tasks %}
                <div class="task-card {{ task.isFinished ? 'finished' : 'pending' }}">
                    <div class="task-header">
                        <h3>{{ task.title }}</h3>
                        <span class="task-date">{{ task.createdAt ? task.createdAt|date('M d, Y') : '' }}</span>
                    </div>
                    <div class="task-content">
                        <p>{{ task.description }}</p>
                    </div>
                    <div class="task-footer">
                        <span class="status-badge">{{ task.isFinished ? 'Finished' : 'Pending' }}</span>
                        <div class="actions">
                            <a href="{{ path('app_task_show', {'id': task.id}) }}" class="btn-icon">ğŸ‘ï¸</a>
                            <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn-icon">âœï¸</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="no-tasks">
                    <p>No tasks created yet.</p>
                    <span class="empty-icon">ğŸ“</span>
                </div>
            {% endfor %}
        </div>

        <a href="{{ path('app_task_create') }}" class="create-new-btn">
            <span class="plus-icon">+</span> Create New Task
        </a>
    </div>
{% endblock %}