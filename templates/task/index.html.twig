{% extends 'base.html.twig' %}

{% block page_styles %}
    <link rel="stylesheet" href="{{ asset('css/tasks.css') }}">
{% endblock %}

{% block body %}
    <div class="tasks-container">
        <h1>Task index</h1>

        <table class="tasks-table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for task in tasks %}
                <tr>
                    <td>{{ task.id }}</td>
                    <td>{{ task.title }}</td>
                    <td>{{ task.description }}</td>
                    <td class="status-{{ task.isFinished ? 'finished' : 'pending' }}">
                        {{ task.isFinished ? 'Finished' : 'Pending' }}
                    </td>
                    <td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td class="actions">
                        <a href="{{ path('app_task_show', {'id': task.id}) }}">Show</a>
                        <a href="{{ path('app_task_edit', {'id': task.id}) }}">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="no-records">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_task_new') }}" class="btn create-new-btn">Create new</a>
    </div>
{% endblock %}