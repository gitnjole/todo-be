{% extends 'base.html.twig' %}

{% block title %}Task Details{% endblock %}

{% block body %}
    <div class="task-detail-container">
        <div class="task-detail-card">
            <div class="detail-header">
                <a href="{{ path('app_task_index') }}" class="back-link">
                    ‚Üê Back to Tasks
                </a>
                <div class="detail-actions">
                    <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn-edit">
                        Edit
                    </a>
                    {{ include('task/_delete_form.html.twig') }}
                </div>
            </div>

            <div class="detail-content">
                <div class="detail-title">
                    <h1>{{ task.title }}</h1>
                    <span class="status-badge {{ task.isFinished ? 'finished' : 'pending' }}">
                        {{ task.isFinished ? 'Finished' : 'Pending' }}
                    </span>
                </div>

                <div class="detail-info">
                    <div class="info-section">
                        <h3>Description</h3>
                        <p>{{ task.description }}</p>
                    </div>

                    <div class="info-section">
                        <h3>Created</h3>
                        <p>{{ task.createdAt ? task.createdAt|date('F d, Y \a\t H:i') : '' }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}